{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Make",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/core", 
      "args": ["./src/files/file1.txt"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "run make"
    }
  ]
}
