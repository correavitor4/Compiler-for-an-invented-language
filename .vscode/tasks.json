{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Make",
      "type": "shell",
      "command": "make",
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "C/C++: gcc build active file",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {"kind": "build", "isDefault": true},
      "detail": "Task generated by Debugger."
    }
  ]
}
